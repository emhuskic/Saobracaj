@model IEnumerable<Saobracaj.Models.Kazna>

@{
    ViewBag.Title = "Upravljanje kaznama";
}

<h2>Upravljanje kaznama</h2>
   <table class="table">
@if (ViewContext.HttpContext.User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Nova kazna", "Create")
    </p>
}
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.naLice.JMBG)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.naVozilo.BrojTablice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Iznos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datum)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.naLice.JMBG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.naVozilo.BrojTablice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Iznos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Datum)
                </td>
                <td>
                    @Html.ActionLink("Details", "Detalji", new { id = item.KaznaId }) |
                    @Html.ActionLink("Delete", "Brisanje", new { id = item.KaznaId })
                </td>
            </tr>
        }

    </table>
