@model IEnumerable<Saobracaj.Models.Vozilo>

@{
    ViewBag.Title = "Upravljanje vozilima";
}

<h2>Upravljanje vozilima</h2>

<p>
    @Html.ActionLink("Dodaj novo vozilo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BrojTablice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrojSasije)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BrojTablice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BrojSasije)
        </td>
        <td>
            @Html.ActionLink("Izmjena", "Edit", new { id=item.VoziloId }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.VoziloId }) |
            @Html.ActionLink("Brisanje", "Delete", new { id=item.VoziloId })
        </td>
    </tr>
}

</table>
